link(rel='stylesheet', type='text/css', href='/css/dataTables.bootstrap.min.css')
link(rel='stylesheet', href='/css/jquery.dataTables.min.css')
.col-md-6.col-lg-6
  form(action='/app/orders', method='post')
    //  product name
    .form-group.row
      label.col-sm-3.col-md-3.col-lg-3.col-form-label Product Name
      .col-sm-9.col-md-9.col-lg-9
        input#first-name.form-control(style='width: 15%;', type='text', name='ProductName', required='true', placeholder='Enter product name...')
    // orderId
    .form-group.row
      label.col-sm-3.col-md-3.col-lg-3.col-form-label OrderId
      .col-sm-9.col-md-9.col-lg-9
        input#first-name.form-control(style='width: 15%;', type='text', name=' OrderId', required='true', placeholder='Enter OrderId...')
    // quantity
    .form-group.row
      label.col-sm-3.col-md-3.col-lg-3.col-form-label Quantity
      .col-sm-9.col-md-9.col-lg-9
        input.form-control(style='width: 15%;', type='text', name='Quantity', required='true', placeholder='Enter Quantity...')
    // dispatch date
    .form-group.row
      label.col-sm-3.col-md-3.col-lg-3.col-form-label Dispatch Date
      .col-sm-9.col-md-9.col-lg-9
        input.form-control(style='width: 15%;', type='text', name='Dispatch Date', required='true', placeholder='DD/MM/YYYY')
    // delivery date
    .form-group.row
      label.col-sm-3.col-md-3.col-lg-3.col-form-label Date of delivery
      .col-sm-9.col-md-9.col-lg-9
        input.form-control(style='width: 15%;', type='text', name='dateOfDelivery', required='true', placeholder='DD/MM/YYYY')
    table#add-new-order.table.table-striped.table-bordered(cellspacing='0', width='15%')
      // JavaScript works here!
    input.btn.btn-success(style='margin-left:20%' type='Submit', name='Submit', value='Add order')
    input.btn.btn-success(type='Submit', name='Submit', value='edit')
    input.btn.btn-success(type='Submit', name='Submit', value='delete')
script(type='text/javascript', src='/js/jquery.dataTables.min.js')
script(type='text/javascript', src='/js/dataTables.bootstrap.min.js')
script(type='text/javascript', src='/scripts/addorders.js')
